<Window x:Class="VowelsAndConsonants.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VowelsAndConsonants"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#FFD4D2D2">
        <Label Content="Enter any word then click &quot;Enter&quot;" HorizontalAlignment="Left" Margin="36,56,0,0" VerticalAlignment="Top" Height="38" Width="281" FontSize="18"/>
        <TextBox x:Name="txtWord" HorizontalAlignment="Left" Margin="322,62,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="242" FontSize="18"/>
        <Button x:Name="btnEnter" Content="Enter" HorizontalAlignment="Left" Margin="608,58,0,0" VerticalAlignment="Top" IsDefault="True" FontSize="20" Height="34" Width="64" RenderTransformOrigin="-0.211,2.663" Click="btnEnter_Click"/>
        <ListBox x:Name="lstVowels" Margin="36,159,428,30"/>
        <ListBox x:Name="lstConsonants" Margin="425,159,39,30"/>
        <Label Content="Vowels" HorizontalAlignment="Left" Margin="36,128,0,0" VerticalAlignment="Top" FontSize="16"/>
        <Label Content="Consonants" HorizontalAlignment="Left" Margin="425,121,0,0" VerticalAlignment="Top" FontSize="16"/>

    </Grid>
</Window>
