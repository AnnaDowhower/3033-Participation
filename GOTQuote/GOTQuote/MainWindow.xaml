<Window x:Class="GOTQuote.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GOTQuote"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/GOT.jpg"/>
        </Grid.Background>
        <Button x:Name="btnGetQuote" Content="Get Random Quote" HorizontalAlignment="Left" Margin="72,233,0,0" VerticalAlignment="Top" Height="44" Width="150" Background="White" BorderBrush="Black" FontSize="14" FontWeight="Bold" Click="btnGetQuote_Click"/>
        <Button x:Name="btnCreateFile" Content="Export" HorizontalAlignment="Left" Margin="577,233,0,0" VerticalAlignment="Top" Height="44" Width="150" Background="White" BorderBrush="Black" FontSize="14" FontWeight="Bold" Click="btnCreateFile_Click"/>
        <TextBlock x:Name="blkQuote" HorizontalAlignment="Left" Margin="91,55,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="95" Width="636" FontSize="18" FontWeight="Bold"/>
        <TextBlock x:Name="blkName" HorizontalAlignment="Left" Margin="577,135,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="37" Width="199" FontWeight="Bold" FontSize="16"/>

    </Grid>
</Window>
