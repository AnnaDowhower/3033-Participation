<Window x:Class="JSON_Pokemon.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JSON_Pokemon"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ComboBox x:Name="cboPokemon" HorizontalAlignment="Left" Margin="75,95,0,0" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnChoose" Content="Choose pokemon!" HorizontalAlignment="Left" Margin="78,286,0,0" VerticalAlignment="Top" Height="37" Width="117" IsDefault="True"/>
        <TextBlock x:Name="blkWeight" HorizontalAlignment="Left" Margin="538,72,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="33" Width="139" Background="#FFC8C4C4"/>
        <Label Content="Weight:" HorizontalAlignment="Left" Margin="583,41,0,0" VerticalAlignment="Top"/>
        <Label Content="Height:" HorizontalAlignment="Left" Margin="583,110,0,0" VerticalAlignment="Top"/>
        <TextBlock x:Name="blkHeight" HorizontalAlignment="Left" Margin="539,136,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="33" Width="139" Background="#FFC6C0C0"/>
        <Image x:Name="imgSprite" HorizontalAlignment="Left" Height="187" Margin="508,217,0,0" VerticalAlignment="Top" Width="225"/>

    </Grid>
</Window>
