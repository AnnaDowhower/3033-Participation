<Window x:Class="Exam1Practice.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Exam1Practice"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ComboBox x:Name="cboRating" HorizontalAlignment="Left" Margin="99,92,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="cboRating_SelectionChanged"/>
        <ComboBox x:Name="cboCountry" HorizontalAlignment="Center" Margin="0,92,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="cboCountry_SelectionChanged"/>
        <ComboBox x:Name="cboLanguage" HorizontalAlignment="Left" Margin="592,92,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="cboLanguage_SelectionChanged"/>
        <Label Content="Rating" HorizontalAlignment="Left" Margin="99,66,0,0" VerticalAlignment="Top"/>
        <Label Content="Country" HorizontalAlignment="Center" Margin="0,66,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.423,-0.191"/>
        <Label Content="Language" HorizontalAlignment="Left" Margin="627,66,0,0" VerticalAlignment="Top"/>
        <ListBox x:Name="lstShows" Margin="0,144,0,0"/>

    </Grid>
</Window>
